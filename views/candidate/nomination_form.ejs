        <div class="col-xl-10 col-md-9 col-8 dyn_col"> 
            <div class="conatainer-fluid border font_family mt-5">
                <form id="nominationForm">
                <div class="col-sm-8 col-xl-10 mar_left_0">
                    <input type="text" name="" id="candidate_id" value="5" class="form-control w-75" hidden>
                </div>
                <div class="row justify-content-end m-auto">
                    <!-- <div class="col-xl-10 col-md-9 col-8 dyn_col px-3"> -->
                        <div class="conatainer-fluid my-4">
                    <% for (let i = 0; i < nominee.length; i++) {%>

                <div class="col-12">
                    <h4 class="text-center fw-bold"><u>NOMINATION FOR SETTLEMENT OF UNPAID WAGES & OTHER DUES</u></h4>
                    <h5 class="text-center"><u>(Not covered by separate nomination forms)</u></h5>
                </div>
                <div class=" mt-3 mar_left">
                    <div class="d-flex">
                    <div class="col-xl-12 f_18">1. Dr/ Mr/Ms: 
                        <% if(nominee[i].nomi_name) { %>

                        <input type="text" name="emp_name" id="emp_name" class="form-control w-75" value="<%= nominee[i].nomi_name %>" disabled>
                        <% } else{%>
                            <input type="text" name="emp_name" id="emp_name" class="form-control w-75" value="">
                            <%}%>
                    </div>
                    <!-- <div class="col-sm-8 col-xl-10 mar_left_0">
                        
                    </div> -->
                    </div>
                    <div class="mar_left_1 f_18"> I hereby nominate the person (s) mentioned below to receive the
                        settlement of
                        unpaid <br> wages & other dues payable after my death.</div>

                    <div class=" f_18">2. I hereby declare that the person (s) mentioned is/are a member (s) of my
                        family.</div>

                    <div class=" f_18">3. Nominations made here invalidates my previous nominations.</div>
                </div>
                <!-- </div> -->


                <div class="conatainer-fluid font_family mt-3">
                    <h5 class="text-center fw-bold">NOMINEES(s)</h5>
                    <div class=" d-flex justify-content-center mx-3">
                        <table class="table_border">
                            <thead>
                                <th>Name in Full of Nominee</th>
                                <th>Relationship with Employee</th>
                                <th>DOB of Nominee</th>
                                <th>Proportion by which the settlement will be shared</th>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                        <% if(nominee[i].name_of_nomi) { %>
                                        <input type="text" name="nominee_name" id="nominee_name" class="form-control" value="<%= nominee[i].name_of_nomi %>" disabled>
                        <%} else{%>
                                         <input type="text" name="nominee_name" id="nominee_name" class="form-control" value="">
                            <%}%>
                                    </td>
                                    <td>
                        <% if(nominee[i].employee) { %>

                                        <input type="text" name="nomi_relationship" id="nomi_relationship" class="form-control" value="<%= nominee[i].employee %>" disabled>
                        <%} else{%>
                                        <input type="text" name="nomi_relationship" id="nomi_relationship" class="form-control" value="">  
                            <%}%>
                                    </td>
                                    <td>
                        <% if(nominee[i].dob_nomi) { %>

                                        <input type="text" name="dob_nimonee" id="dob_nimonee" value="<%= nominee[i].dob_nomi %>" placeholder="Enter Date Of Birth...." class="form-control datepicker1" disabled>
                                        <%} else{%>
                                            <input type="text" name="dob_nimonee" id="dob_nimonee" value="" placeholder="Enter Date Of Birth...." class="form-control datepicker1" >
                                            <%}%>
                                    </td>
                                    <td>
                        <% if(nominee[i].dob_nomi) { %>

                                        <input type="text" name="settlement" id="settlement" class="form-control" value="<%= nominee[i].settlement %>" disabled>
                                        <%} else{%>
                                            <input type="text" name="settlement" id="settlement" class="form-control" value="">
                                            <%}%>
                                    </td>
                                </tr>
                                <!-- <tr>
                                    <td><input type="text" name="" id="" class="form-control"></td>
                                    <td><input type="text" name="" id="" class="form-control"></td>
                                    <td><input type="date" name="" id="" class="form-control"></td>
                                    <td><input type="text" name="" id="" class="form-control"></td>
                                </tr> -->
                            </tbody>
                        </table>
                    </div>
                </div>

                <%}%>

<% for (let i = 0; i < settlement.length; i++) {%>

                 <div class="container font_family mt-5">
                    <div class="div">
                        <h5 class="fw-bold text-center border-dark border-bottom">STATEMENT</h5>
                    </div>
                    <div class="main_div mt-3">
                        <div class="d-flex">

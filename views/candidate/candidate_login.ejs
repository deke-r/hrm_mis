<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/static/cdn/bootstrap-5.3.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="/static/cdn/fontawesome/fontawesome6.5.1.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/static/css/candidate_login.css">
    <title>HRM</title>
  <!-- Bootstrap CSS CDN -->
  <link rel="icon" href="/static/images/images-removebg-preview.png" >
</head>
<body class="add_bg">
    <div class="container-fluid h-100 blur_layer">
        <div class="row h-100 justify-content-center align-items-center">
            <div class="col-xl-3 col-md-4 col-sm-6 col-11 light_white rounded-4 shadow_grey p-3 border_white">
                <div class="row justify-content-center gy-2" method="post" action="/candidate_login" id="loginForm" >
                    <div class="col-8 d-flex justify-content-center">
                        <img src="/static/images/images-removebg-preview.png" alt="" width="70%"  class="">
                    </div>

                    <div class="col-12">
                        <label for="box1" class="form-label">Candidate-Id</label>
                        <div class="d-flex rem_br_rad_end shadow_high">
                            <i class="fa-solid fa-id-badge px-2 pt-2 rounded-start-1 bg-dark text-light"></i>
                            <input type="text" class="form-control form-control-sm rounded-start-0 border-0 shadow-none" id="box1" placeholder="Enter Candidate Email/Mobile" name="candidate_id">
                        </div>
                    </div>
                    <div class="col-12">
                        <label for="box2" class="form-label">Password</label>
                        <div class="d-flex rem_br_rad_end shadow_high">
                            <i class="fa-solid fa-key px-2 pt-2 rounded-start-1 bg-dark text-light"></i>
                            <input type="password" class="form-control form-control-sm shadow_high rounded-0 border-0 shadow-none" id="box2" placeholder="Enter password" name="PASSWORD">
                            <i class="fa-solid fa-eye-slash bg-white rounded-end-1 p_3per" id="show"></i>
                        </div>
                    </div>
                    <div class="col-12 d-flex justify-content-end">
                        <a href="/candidate_forgot_password" class="text-decoration-none" id="" >forgot password?</a>
                    </div>
                    <div class="col-12 text-center">
                        <button type="submit" id="log" class="btn btn-light mt-2 fs_13 btn_bor px-4 shadow_high fw-semibold">Login</button>
                    </div>
                 
                </div>
            </div>
        </div>
    </div>

    <!-- Include external JavaScript file -->
    <script src="/static/cdn/jquery/jquery3.7.1.js"></script>

    <!-- <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script> -->
    <script src="/static/cdn/sweetalert2/sweetalert2.js"></script>
<script src="/static/js/candidate_login.js"></script>
    <!-- <script src="/static/cdn/sweetalert/js/sweetalert11.10.2.js"></script> -->
    <script src="/static/cdn/bootstrap-5.3.3/js/bootstrap.bundle.js"></script>


  
</body>
</html>

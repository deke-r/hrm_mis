  <body>
    <%-include('../common/header')%> <%-include('../common/sidebar')%>
    <div class="mt-5"></div>
    <div class="container-fluid h-100 position-relative">
        <button class=" pos offbtn  p-0 " type="button" data-bs-toggle="offcanvas"
            data-bs-target="#offcanvasWithBothOptions" aria-controls="offcanvasWithBothOptions">
            <i
                class="fa-solid  fa-angles-right rounded-end-3 text-light side_button fs-5 bg_bl  span_expand "></i>
        </button>
        <div class="row dyn_row justify-content-end ">

            <div class="col-xl-10 col-md-9 col-8 dyn_col px-3">

              <h5 class="text-center mt-3 text-light fs_16" ><center>Offer Letter Template</center> </h5>
              <div class="p-1">
                  <table class="w-100 table_text_aling_middle table-bordered border-dark" id="jd_table">
              <thead class="table_bg">
              <tr>
                  <th>Candidate Id</th>
                  <th>JD ID</th>
                  <th>Candidate Name</th>
                  <th>Candidate Email</th>
                  <th>Candidate mobile</th>
                
                  <th>Generate</th>
                 
      
              </tr>
          </thead>
          <tbody id="abcd">
      
              <%for(var i=0; all_data.length>i;  i++){%>
                 
                  <tr>
                      <td><%=all_data[i].candidate_id%></td>
                      <td><%=all_data[i].jd_id%></td>
                      <td><%=all_data[i].candidate_name%></td>
                      <td><%=all_data[i].candidate_email%></td>
                      <td><%=all_data[i].candidate_mobile%></td>
                     
                    
                     
                    
              <td><i class="fa-solid fa-eye view_req"  id="offer_letter_btn"  candidate_id="<%=all_data[i].candidate_id%>" candidate_name="<%=all_data[i].candidate_name%>"  candidate_email="<%=all_data[i].candidate_email%>"></i></td>
                     
                          <!-- <td><i class="fa-solid fa-file-pdf dwnld" ></i></td> -->
                          <!-- <td><i class="fa fa-trash text-danger delete" r_id="<%=all_data[i].r_id%>"  level="<%=all_data[i].level%>" ></i></td> -->
                  </tr>
            
            <%}%>
                  
           
         
       
          </tbody>
              </table>
          
           
          </div>

          <div id="offer_letter">

       
         

        </div>



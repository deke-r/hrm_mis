                        <!-- Other sections like Performance Polymers and Agri Products -->
                    
                        <h6 class="fs-13 mt-3 fw-semibold" >Role Summary:</h6>
                        <div id="p_rs"></div>
                    
                        <!-- Additional role details -->
                        <h6 class="fs-13 mt-3 fw-semibold">Roles and Responsibilities:</h6>
                        <div id="p_rns"></div>
                        
                        <h6 class="fs-13 mt-3 fw-semibold">Key Performance Indicators:</h6>
                       <div id="p_kpi">

                       </div>
                    
                        <h6 class="fs-13 mt-3 fw-semibold">Educational Qualifications / Professional Experience:</h6>
                        <div id="p_eq">

                        </div>
                    
                        <h6 class="fs-13 mt-3">Candidate Requirements:</h6>
                        <div id="p_can">

                        </div>
                    </div>
                                    
    </td>
            </tr>
            </thead>
        </table>
    </div>


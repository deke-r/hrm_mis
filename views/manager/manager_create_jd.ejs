                        <div class="col-md-4">
                            <label for="Job_title">Job Title</label>
                            <input type="text" class="form-control" id="Job_title" placeholder="Enter Job Title" name="job_tittle">
                        </div>
                        <div class="col-md-4">
                            <label for="function">Department/Group</label>
                            <input type="text" class="form-control" id="function" placeholder="Enter Function" name="function">
